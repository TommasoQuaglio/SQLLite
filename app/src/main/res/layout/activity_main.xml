<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotationX="-360"
    android:rotationY="360"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/operando"
        android:layout_width="82dp"
        android:layout_height="53dp"
        android:layout_marginStart="174dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="155dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Titolo"
        android:layout_width="216dp"
        android:layout_height="23dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="59dp"
        android:text="OPERAZIONI TRA NUMERI"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/number1"
        android:layout_width="82dp"
        android:layout_height="53dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="274dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="79dp"
        android:layout_height="57dp"
        android:layout_marginStart="289dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCalcola"
        android:layout_width="118dp"
        android:layout_height="52dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="193dp"
        android:layout_marginEnd="141dp"
        android:onClick="calcola"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="114dp"
        android:layout_height="83dp"
        android:layout_marginStart="191dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="168dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="442dp"
        android:layout_height="83dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/button_info"
        android:onClick="apriInfo"
        android:text="Info"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult" />

    <Button
        android:id="@+id/btnVisualizzaRisultato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_info"
        android:onClick="apriRisultatoActivity"
        android:text="Visualizza Database"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult" />

</androidx.constraintlayout.widget.ConstraintLayout>